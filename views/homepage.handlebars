<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}

	<div class="card">
		<div class="card-header">
			<div class="card-title"><h3><a href="/posts/{{id}}"> {{post.title}} </a></h3></div>
			<div class="card-datetime"><p>
					Posted by
					{{post.user.username}}
					on
					{{format_date date_created}}</p></div>
		</div>
		<div class="card-body">
			<p>{{post_content}}</p>
		</div>
	</div>

{{/each}}